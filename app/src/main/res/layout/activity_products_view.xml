        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/diagSavebtn5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/docNamePtxt9"
